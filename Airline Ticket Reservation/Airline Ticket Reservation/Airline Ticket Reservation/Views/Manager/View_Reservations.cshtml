@model List<Airline_Ticket_Reservation.Models.ViewReservations>
@{
    ViewBag.Title = "User Reservations";
}
<h2>@ViewBag.Title.</h2>
@*<div>    
    <label id="Label1" style="color: #000000">FlightCompany</label>                
    @Html.DropDownList("txtfcompany", Model.flightNames, "Select...")            
</div>*@
<table class="grid" border="1">
    <tr>
        <th>BookingID</th>
        <th>User Name</th>
        <th>Flight Company</th>
        <th>Flight Number</th>
        <th>Source</th>
        <th>Destination</th>        
        <th>Arrival Date</th>
        <th>Arrival Time</th>
        <th>Depature Date</th>
        <th>Depature Time</th>
        <th>Booking Date</th>
        <th>Seats</th>
        <th>Price</th>
        <th>Amount</th>
        <th>Status</th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
        <tr>
            <td>
                @item.bookingId
            </td>
            <td>
                @item.username
            </td>
            <td>
                @item.company
            </td>
            <td>
                @item.number
            </td>
            
            <td>
                @item.source
            </td>
            <td>
                @item.destination
            </td>
            <td>
                @item.arrivalDate
            </td>
            <td>
                @item.arrivTime
            </td>
            <td>
                @item.depDate
            </td>
            <td>
                @item.depTime
            </td>
            <td>
                @item.bookingDate
            </td>
            <td>
                @item.seats
            </td>
            <td>
                @item.price
            </td>
            <td>
                @item.amount
            </td>
            <td>
                @item.status
            </td>
        </tr>
        }
    }

</table>
